<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>

    <link rel="stylesheet" href="../css/register.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <style>
        a{
            text-decoration: none;
        }
    </style>
</head>

<body>

    {{#if exist}}
        <div class="alert" style="padding-left: 40px; margin-top: 10px; background: #f92b2b;">
            <h2>User already exists. <a href="/register">Register</a> a new user!!!!</h2>
        </div>
    {{/if}}

    {{#if success}}
        <div class="alert" style="padding-left: 40px; margin-top: 10px; background: #3eb573">
            <h2>User registered!!</h2>
        </div>
    {{/if}}

    {{#if notMatch}}
        <div class="alert" style="padding-left: 40px; margin-top: 10px; background: #e36747d4">
            <h2>Password don't match try again</h2>
        </div>
    {{/if}}


    <section>
        <div class="user">
            <a href="/register"><span onclick="employee()">Employee</span></a>
            <span onclick="student()">Student</span>
            <hr id="indicator">
        </div>



        {{!-- Employee Registration --}}

        <div class="form" id="employee" style="display: block;">
            <h1 style="text-align: center">Employee Details</h1>
            <form action="/employee_add" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <div class="col-4">
                        <label for="name">Full Name</label>
                        <input type="text" name="name" id="name" required maxlength="60">
                    </div>
                    <div class="col-4">
                        <label for="emp_id">Employee Id</label>
                        <input type="text" name="emp_id" id="emp_id" required maxlength="20">
                    </div>
                    <div class="col-4">
                        <label for="type">Employee Type</label>
                        <input type="text" name="type" id="type" required maxlength="20">
                    </div>
                    <div class="col-4">
                        <label for="position">Job Position</label>
                        <input type="text" name="position" id="position" required maxlength="30">
                    </div>
                    <div class="col-4">
                        <label for="dob">DOB</label>
                        <input type="date" name="dob" id="dob" required>
                    </div>
                    <div class="col-4">
                        <label for="gender">Gender</label>
                        <input type="text" name="gender" id="gender" required>
                    </div>
                    <div class="col-4">
                        <label for="phone">Phone No</label>
                        <input type="text" name="phone" id="phone" required maxlength="10">
                    </div>
                    <div class="col-4">
                        <label for="email">Email</label>
                        <input type="text" name="email" id="email" required maxlength="45">
                    </div>
                    <div class="col-4">
                        <label for="blood">Blood Group</label>
                        <input type="text" name="blood" id="blood" required maxlength="10">
                    </div>
                    <div class="col-4">
                        <label for="address">Address</label>
                        <input type="text" name="address" id="address" required maxlength="200">
                    </div>
                    <div class="col-4">
                        <label for="doj">DOJ</label>
                        <input type="date" name="doj" id="doj" required>
                    </div>
                    <div class="col-4">
                        <label for="qualification">Qualification</label>
                        <input type="text" name="qualification" id="qualification" required maxlength="20">
                    </div>
                    <div class="col-4">
                        <label for="department">Department</label>
                        <input type="text" name="department" id="department" required maxlength="45">
                    </div>
                    <div class="col-4">
                        <label for="aadhar">Aadhar No.</label>
                        <input type="text" name="aadhar" id="aadhar" required maxlength="12">
                    </div>
                    <div class="col-4">
                        <label for="account">Account No</label>
                        <input type="text" name="account" id="account" required maxlength="11">
                    </div>
                    <div class="col-4">
                        <label for="bank">Bank Name</label>
                        <input type="text" name="bank" id="bank" maxlength="200">
                    </div>
                    <div class="col-4">
                        <label for="marital_status">Marital Status</label>
                        <input type="text" name="marital_status" id="marital_status" required maxlength="10">
                    </div>
                    <div class="col-4">
                        <label for="image">Image</label>
                        <input type="file" name="image" id="image" required>
                    </div>
                    <div class="col-4">
                        <label for="password">Password</label>
                        <input type="password" name="password" id="password" required minlength="4">
                    </div>
                    <div class="col-4">
                        <label for="cpassword">Confirm Password</label>
                        <input type="password" name="cpassword" id="cpassword" required minlength="4">
                    </div>

                    <div class="btn">
                        <button type="submit">+Add</button>
                    </div>
                </div>
            </form>
            <div class="btn">
                <a href="/employee_list"><button class="view">View</button></a>

            </div>
        </div>






        {{!-- Student Registration --}}

        <div class="form" id="student" style="display: none;">
            <h1 style="text-align: center">Student Details</h1>
            <form action="/student_add" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <div class="col-4">
                        <label for="name">Full Name</label>
                        <input type="text" name="name" id="name" required maxlength="60">
                    </div>
                    <div class="col-4">
                        <label for="regd_no">Registration No.</label>
                        <input type="text" name="regd_no" id="regd_no" required maxlength="20">
                    </div>
                    <div class="col-4">
                        <label for="roll_no">Roll No.</label>
                        <input type="text" name="roll_no" id="roll_no" required maxlength="7">
                    </div>
                    <div class="col-4">
                        <label for="father_name">Father's Name</label>
                        <input type="text" name="father_name" id="father_name" required maxlength="60">
                    </div>
                    <div class="col-4">
                        <label for="mother_name">Mother's Name</label>
                        <input type="text" name="mother_name" id="mother_name" required maxlength="60">
                    </div>
                    <div class="col-4">
                        <label for="dob">DOB</label>
                        <input type="date" name="dob" id="dob" required>
                    </div>
                    <div class="col-4">
                        <label for="gender">Gender</label>
                        <input type="text" name="gender" id="gender" required maxlength="10">
                    </div>
                    <div class="col-4">
                        <label for="phone">Phone No</label>
                        <input type="text" name="phone" id="phone" required maxlength="10">
                    </div>
                    <div class="col-4">
                        <label for="email">Email</label>
                        <input type="text" name="email" id="email" required maxlength="60">
                    </div>
                    <div class="col-4">
                        <label for="blood">Blood Group</label>
                        <input type="text" name="blood" id="blood" required maxlength="10">
                    </div>
                    <div class="col-4">
                        <label for="address">Address</label>
                        <input type="text" name="address" id="address" required maxlength="250">
                    </div>
                    <div class="col-4">
                        <label for="father_phn">Father's Phone No.</label>
                        <input type="text" name="father_phn" id="father_phn" required maxlength="10">
                    </div>
                    <div class="col-4">
                        <label for="semester">Semester</label>
                        <input type="text" name="semester" id="semester" required maxlength="5">
                    </div>
                    <div class="col-4">
                        <label for="course">Course</label>
                        <input type="text" name="course" id="course" required maxlength="10">
                    </div>
                    <div class="col-4">
                        <label for="department">Department</label>
                        <input type="text" name="department" id="department" required maxlength="30">
                    </div>
                    <div class="col-4">
                        <label for="section">Section</label>
                        <input type="text" name="section" id="section" required maxlength="5">
                    </div>
                    <div class="col-4">
                        <label for="father_email">Father's Email</label>
                        <input type="text" name="father_email" id="father_email" required maxlength="60">
                    </div>
                    <div class="col-4">
                        <label for="image">Image</label>
                        <input type="file" name="image" id="image" required>
                    </div>
                    <div class="col-4">
                        <label for="password">Password</label>
                        <input type="password" name="password" id="password" required minlength="4">
                    </div>
                    <div class="col-4">
                        <label for="cpassword">Confirm Password</label>
                        <input type="password" name="cpassword" id="cpassword" required minlength="4">
                    </div>

                    <div class="btn">
                        <button type="submit">+Add</button>
                    </div>
                </div>
            </form>
            <div class="btn">
                <a href="/student_list"><button class="view">View</button></a>

            </div>
        </div>




    </section>











    <script>
        let employeeForm = document.getElementById("employee");
        let studentForm = document.getElementById("student");

        function employee() {
            employeeForm.style.display = "block";
            studentForm.style.display = "none";
        }

        function student() {
            employeeForm.style.display = "none";
            studentForm.style.display = "block";
        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
        crossorigin="anonymous"></script>
</body>

</html>